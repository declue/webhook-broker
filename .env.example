# Server
NODE_ENV=development
PORT=3000
HOST=0.0.0.0

# NATS
NATS_URL=nats://localhost:4222
NATS_STREAM_NAME=WEBHOOKS
NATS_STREAM_SUBJECTS=webhooks.>

# PostgreSQL
DATABASE_URL=postgresql://webhook:webhook@localhost:5432/webhook_broker?schema=public

# Redis
REDIS_URL=redis://localhost:6379
REDIS_CACHE_TTL=300

# GitHub OAuth
# Create a GitHub OAuth App: https://github.com/settings/developers
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret
GITHUB_CALLBACK_URL=http://localhost:3000/api/v1/auth/github/callback

# GitHub Webhook Secret (REQUIRED in production)
# Generate with: openssl rand -hex 32
GITHUB_WEBHOOK_SECRET=

# GitLab Webhook Secret (optional)
GITLAB_WEBHOOK_SECRET=

# Jira Webhook Secret (optional)
# For Jira webhooks with HMAC signature verification
JIRA_WEBHOOK_SECRET=

# JWT Configuration
# IMPORTANT: Change this in production! Generate with: openssl rand -base64 32
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Access Token expiration (short-lived)
JWT_ACCESS_EXPIRES_IN=15m
JWT_ACCESS_EXPIRES_IN_SECONDS=900

# Refresh Token expiration (long-lived)
JWT_REFRESH_EXPIRES_IN=7d

# Encryption Key (REQUIRED in production)
# IMPORTANT: Separate from JWT_SECRET for proper key separation
# Generate with: openssl rand -hex 32 (produces 64 hex characters = 32 bytes)
ENCRYPTION_KEY=

# Metrics Token (REQUIRED in production)
# Token for accessing /metrics endpoint
# Generate with: openssl rand -base64 32
METRICS_TOKEN=

# CORS Origin (REQUIRED in production)
# Allowed origins for CORS requests
CORS_ORIGIN=https://your-domain.com

# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=1 minute

# Application
WEBHOOK_PATH_PREFIX=/webhook
API_PATH_PREFIX=/api/v1
